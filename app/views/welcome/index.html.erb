<div id="background">
	<header class="cf">
		<div class="wrapper_wide">
		<a href="#" id="logo">Pogcast.fm</a>
		<nav>
			<ul>
        <% unless podcast_signed_in? %>
          <li><a href="#">Explore</a></li>
  				<li><%= link_to "Sign In", new_podcast_session_path %></li>
  				<li><%= link_to "Create a Podcast", new_podcast_registration_path %></li>
        <% else %>
          <li><a href="#">Dashboard</a></li>
          <li><a href="#">Explore</a></li>
          <li><%= link_to "Sign out", destroy_podcast_session_path, method: :delete, data:{confirm:"Are you sure?"} %></li>
        <% end %>
			</ul>
		</nav>
	</div>
	</header>

	<div class="wrapper_skinny center">

		<h1>Discover your new favorite podcast, or create your own</h1>
    <%= link_to "Create a Podcast", new_podcast_registration_path, class: "button button_highlight"%>
		<a href="podcasts.html" class="button button_white">Explore</a>

	</div>

</div>
